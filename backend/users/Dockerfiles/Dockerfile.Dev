ARG NODE_ENV  # Define build argument for NODE_ENV

FROM node:21
WORKDIR /usr/src/app
RUN npm i bcrypt

# Copy package files
COPY package*.json ./

# Copy application code
COPY . .

# Set NODE_ENV based on build argument
ENV NODE_ENV='dev'

EXPOSE 8884

# Default command (can be overridden at runtime)
CMD [ "node", "src/index.js" ]